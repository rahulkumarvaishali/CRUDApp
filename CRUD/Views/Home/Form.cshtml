@model CRUD.Models.Test
@{
    ViewBag.Title = "Form";
}
<style>
    .error {
        color: #f70909;
    }
</style>
<h2>Form</h2>
<br />
@using (Html.BeginForm("Form", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Ples Enter Name", data_val = "true", data_val_required = "Pease Enter  Name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })

    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Ples Enter Email", data_val = "true", data_val_required = "Pease Enter Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })

    </div>

    <div class="form-group">
        <label>Salary</label>
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @placeholder = "Ples Enter id", data_val = "true", data_val_required = "Pease Enter Numeric value" })
        @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "error" })

    </div>

    <div class="form-group">
        <label>Mobile</label>
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Ples Enter id", data_val = "true", data_val_required = "Pease Enter Numeric value" })
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })

    </div>
    <div class="form-group">
        <label>Pincode</label>
        @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control", @placeholder = "Ples Enter id", data_val = "true", data_val_required = "Pease Enter Numeric value" })
        @Html.ValidationMessageFor(m => m.Pincode, "", new { @class = "error" })

    </div>
    <button class="btn btn-success" type="submit">Submit</button>
    <button class="btn btn-danger" type="reset">Reset</button>
}
